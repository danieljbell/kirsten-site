---
layout: layouts/base.njk
templateClass: tmpl-post
---

<section class="hero {{ color }}">
  <div class="site-width">
    {% if icon %}
      <img src="{{ icon | url }}" alt="">
    {% endif %}
    <h1>{{ title }}</h1>
  </div>  
</section>

<section>
  <div class="site-width">
    <div class="post">
      <article>
        {{ content | safe }}
      </article>
      <aside>
        <div class="sidebar">
          <ul>
            {%- for post in collections.work -%}
              <li><a href="{{post.url}}">{{post.data.title}}</a></li>
            {%- endfor -%}
          </ul>
        </div>
      </aside>
    </div>
  </div>
</section>